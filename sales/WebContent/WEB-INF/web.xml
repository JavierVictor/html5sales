<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>sales</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <display-name>PhoneListener</display-name>
    <servlet-name>PhoneListener</servlet-name>
    <servlet-class>movistar.servlet.PhoneListener</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PhoneListener</servlet-name>
    <url-pattern>/phone</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UserControl</display-name>
    <servlet-name>UserControl</servlet-name>
    <servlet-class>movistar.servlet.UserControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserControl</servlet-name>
    <url-pattern>/user</url-pattern>
    <url-pattern>/admin/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ItineraryControl</display-name>
    <servlet-name>ItineraryControl</servlet-name>
    <servlet-class>movistar.servlet.ItineraryControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItineraryControl</servlet-name>
    <url-pattern>/itinerary</url-pattern>
    <url-pattern>/admin/itinerary</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>movistar.listener.ApplicationListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>SaleControl</display-name>
    <servlet-name>SaleControl</servlet-name>
    <servlet-class>movistar.servlet.SaleControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaleControl</servlet-name>
    <url-pattern>/sale</url-pattern>
    <url-pattern>/admin/sale</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ProductControl</display-name>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>movistar.servlet.ProductControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
    <url-pattern>/admin/product</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>180</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>ClientControl</display-name>
    <servlet-name>ClientControl</servlet-name>
    <servlet-class>movistar.servlet.ClientControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClientControl</servlet-name>
    <url-pattern>/client</url-pattern>
    <url-pattern>/admin/client</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminControl</servlet-name>
    <servlet-class>movistar.servlet.AdminControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminControl</servlet-name>
    <url-pattern>/admin/adminUser</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>AppFilter</display-name>
    <filter-name>AppFilter</filter-name>
    <filter-class>movistar.listener.AppFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AppFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>ConfigurationControl</display-name>
    <servlet-name>ConfigurationControl</servlet-name>
    <servlet-class>movistar.servlet.ConfigurationControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfigurationControl</servlet-name>
    <url-pattern>/configuration</url-pattern>
    <url-pattern>/admin/configuration</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ReportControl</display-name>
    <servlet-name>ReportControl</servlet-name>
    <servlet-class>movistar.servlet.ReportControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportControl</servlet-name>
    <url-pattern>/admin/report</url-pattern>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Validator</display-name>
    <servlet-name>Validator</servlet-name>
    <servlet-class>movistar.servlet.Validator</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Validator</servlet-name>
    <url-pattern>/validator</url-pattern>
  </servlet-mapping>
</web-app>